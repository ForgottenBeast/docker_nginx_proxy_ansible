version: "2"

networks:
  proxy_net:
    external:
      name: proxy_net
  nginx_net:

services:

  nginx:
    image: jwilder/nginx-proxy
    restart: always
    networks:
      - proxy_net
      - nginx_net
    ports:
      - "{{host_ip_addr}}:443:443"
      - "{{host_ip_addr}}:80:80"
    volumes:
      - /var/run/docker.sock:/tmp/docker.sock:ro
      - "/etc/nginx/vhost.d"
      - "/usr/share/nginx/html"
      - "/etc/nginx/certs"

  letsencrypt_nginx_companion:
    image: jrcs/letsencrypt-nginx-proxy-companion
    restart: always
    networks:
      - nginx_net
    volumes:
      - "/var/run/docker.sock:/var/run/docker.sock:ro"
    volumes_from:
      - "nginx"

{% if TOR_HH == True %}
  torhh:
    networks:
      - nginx_net
    restart: always
    image: goldy/tor-hidden-service
    links:
      - nginx
    environment:
      NGINX_KEY: |
{{ wpkey(tor_hidden_service_private_key) | indent(8,True) }}
      NGINX_PORTS: 80:80,443:443
{% endif %}
